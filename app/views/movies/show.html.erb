<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3">
    <%= image_tag @movie.image_url, width: "100%" %>
  </div>
  <div class="col-md-9">
    <p>
      <h1>
        <%= @movie.title %>
      </h1>
    </p>

    <p>
      <strong>Genre:</strong>
      <%= @movie.genre %>
    </p>

    <p>
      <strong>Rating:</strong>
      <%= @movie.rating %>
    </p>

    <%= link_to 'Edit', edit_movie_path(@movie) %> |
    <%= link_to 'Back', movies_path %>

  </div>

</div>

<%= render 'shared/cast_members' if @movie.actors.count > 0 %>
